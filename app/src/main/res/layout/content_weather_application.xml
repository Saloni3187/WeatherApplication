<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_weather_application"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.weatherapplication.views.WeatherApplicationActivity"
    tools:showIn="@layout/activity_weather_application"
    android:background="@mipmap/clouds">

    <TextView
        android:id="@+id/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="@dimen/_txt_large_"
        android:paddingTop="@dimen/_txt_padding"
        android:paddingBottom="@dimen/_txt_padding"/>

    <TextView
        android:layout_below="@id/app_name"
        android:id="@+id/lbl_horizontal"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#ffffff"
        android:paddingTop="@dimen/_txt_padding"
        android:paddingBottom="@dimen/_txt_padding"/>

    <TextView
        android:id="@+id/txt_title_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lbl_horizontal"
        android:textSize="@dimen/_txt_extra_large"
        android:text="@string/_txt_location_name"
        android:paddingTop="@dimen/_txt_padding"
        android:paddingBottom="@dimen/_txt_padding"/>

    <TextView
        android:id="@+id/txt_title_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_title_location"
        android:textSize="@dimen/_txt_large_"
        android:text="@string/_txt_name_of_the_day"
        android:paddingTop="@dimen/_txt_padding"
        android:paddingBottom="@dimen/_txt_padding"/>

    <ImageView
        android:id="@+id/img_weather_type"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/txt_title_day"
        android:paddingTop="@dimen/_txt_padding"

        android:paddingBottom="@dimen/_txt_padding"/>


    <TextView
        android:id="@+id/txt_max_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_title_day"
        android:textSize="@dimen/_txt_extra_large"
        android:text="@string/_txt_name_of_the_day"
        android:layout_alignParentEnd="true"
        android:paddingTop="@dimen/_txt_padding"
        android:paddingBottom="@dimen/_txt_padding"
        />

    <TextView
        android:id="@+id/txt_min_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_max_temp"
        android:textSize="@dimen/_txt_extra_large"
        android:layout_alignParentEnd="true"
        android:paddingTop="@dimen/_txt_padding"
        android:paddingBottom="@dimen/_txt_padding"
        />

    <TextView
        android:id="@+id/txt_temp_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_min_temp"
        android:textSize="@dimen/_txt_medium"
        android:layout_alignParentEnd="true"
        android:paddingTop="@dimen/_txt_padding"
        android:paddingBottom="@dimen/_txt_padding"
        />
    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        >
    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

    </LinearLayout>
    </HorizontalScrollView>
</RelativeLayout>
